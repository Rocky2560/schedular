    <groupId>com.ekbana.bigdata</groupId>
    <artifactId>scheduler</artifactId>
    <version>0.1.0</version>

    <repositories>
        <repository>
            <id>es-snapshots</id>
            <name>elasticsearch snapshot repo</name>
            <url>https://snapshots.elastic.co/maven/</url>
        </repository>
